{
    "manifest_version": 2,
    "name": "Toggle Plaintext Passwords",
    "description": "Changes password fields to 'text' fields for easy checking.",
    "version": "0.0.1",
    "icons": {
      "64": "icons/eye.png"
    },
    "permissions": ["activeTab", "scripting"],
    "background": {
      "scripts": ["background_script.js"]
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "borderify@example.com"
      }
    },
    "content_scripts": [],
    "browser_action": {
      "default_icon": {
        "64": "icons/eye.png"
      }
    }
  }